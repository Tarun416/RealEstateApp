<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/customerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginRight="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_16"
        android:text="Customer Name"
        android:textColor="@color/black_color"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/customerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/customerText"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginRight="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_8"
        android:textSize="14sp"
        tools:text="Rohil Saluja" />


    <TextView
        android:id="@+id/customerNumberText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/customerName"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginRight="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_24"
        android:text="Customer Number"
        android:textColor="@color/black_color"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/customerNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/customerNumberText"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginRight="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_8"
        android:textSize="14sp"
        tools:text="+919292882828" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_centerHorizontal="true"
        android:paddingRight="@dimen/margin_64"
        android:text="Call Back Now"
        android:paddingLeft="@dimen/margin_64"
        android:id="@+id/submit"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_64"
        android:layout_marginTop="@dimen/margin_64"
        android:textColor="@android:color/white"
        android:background="@drawable/green_curved_rectangle"
        android:layout_below="@+id/dateTimeContainer"/>

</RelativeLayout>